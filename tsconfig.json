{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": false,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "types": ["vite/client", "element-plus/global", "jest", "node"],
    "baseUrl": "src",
    "paths": {
      "@/*": ["./render/*"]
    }
  },
  "include": [
    "src/render/**/*.ts", 
    "src/render/**/*.tsx", 
    "src/render/**/*.vue"
  ],
  "exclude": [
    "node_modules/"
  ]
}
